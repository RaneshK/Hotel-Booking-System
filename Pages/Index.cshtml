@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <style>
        img {
            width: 100%;
            height: auto;
        }
    </style>

    <div id="threeSistersCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
        <ul class="carousel-indicators">
            <li data-target="#threeSistersCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#threeSistersCarousel" data-slide-to="1"></li>
            <li data-target="#threeSistersCarousel" data-slide-to="2"></li>
            <li data-target="#threeSistersCarousel" data-slide-to="3"></li>
        </ul>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/room1.jpg" alt="Picture of one of the hotel rooms" />
                <div class="carousel-caption">
                    <h3>One of our comfy rooms</h3>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/images/room2.jpg" alt="Picture of one of the hotel rooms" />
                <div class="carousel-caption">
                    <h3>room</h3>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/images/hotelBuilding.jpg" alt="Picture of the outside of the hotel" />
                <div class="carousel-caption">
                    <h3>Hotel outside</h3>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/images/dining.jpg" alt="Our breakfast options" />
                <div class="carousel-caption">
                    <h3>Breakfast</h3>
                </div>
            </div>
        </div>

        <a class="carousel-control-prev" href="#threeSistersCarousel" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#threeSistersCarousel" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>


    <div class="row">
        <div class="col-md-8">
            <p style="text-align:center; font-size:1.5rem;">Welcome to the Three Sisters Hotel</p>
            <h1 style="text-align:center; font-size:1.5rem;">Introduction</h1>
            <p font-size:1.5rem;">
                Welcome to the Three Sisters Hotel. We are delighted to have you stay at our hotel. The Three Sisters Hotel offers a variety of facilities and services such
                as in-house laundry, breakfast, lunch, dinner and guest gym and pool. We hope that you will enjoy tour stay.
            </p>
        </div>

        <div class="col-md-4">
            <ul>
                <h3>Some useful links during your stay</h3>
                <li class="nav-item">
                    <a href="http://www.bom.gov.au/nsw/forecasts/katoomba.shtml">Katoomba Weather</a>
                </li>
                <li class="nav-item">
                    <a href="https://www.bmcc.nsw.gov.au/">Blue Mountains City Council</a>
                </li>
                <li class="nav-item">
                    <a href="https://www.bluemts.com.au/things-to-do/">Things to do</a>
                </li>
            </ul>
        </div>
    </div>
</div>